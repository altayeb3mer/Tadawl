<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:layoutDirection="rtl">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar_bg"
        app:layout_collapseMode="pin"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/laySearch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_marginRight="@dimen/margin_small_size"
                android:background="@drawable/shape_back_circle"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search" />
            </LinearLayout>

            <ImageView
                android:visibility="invisible"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_toRightOf="@+id/laySearch"
                android:scaleType="center"
                android:src="@drawable/ic_notifications" />


            <LinearLayout
                android:id="@+id/nav_drawer_lay"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_marginRight="@dimen/margin_small_size"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:background="@android:color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:background="@android:color/white" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="1dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:background="@android:color/white" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <com.example.tadawl.Utils.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layoutDirection="rtl"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/btn_navigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_b_nav_bg"
                android:theme="@style/BottomNavigationView"
                app:itemIconTint="@drawable/bottom_navigation_selector"
                app:labelVisibilityMode="unlabeled"
                app:menu="@menu/btn_nav" />
        </LinearLayout>

        <ImageView
            android:id="@+id/addPost"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_add_bg"
            android:scaleType="center"
            android:src="@drawable/ic_add" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>