<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="@dimen/margin_normal_size"
            android:layout_margin="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtTitle"
                    android:minHeight="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_normal_size"
                    android:textColor="@color/newAdsTitleColor"
                    android:text="سوف يتم مسح بيانات الدخول\n متابعة؟"
                    android:gravity="center"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ok"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/txt_small_size"
                        android:text="تسجيل خروج"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/txt_normal_size"
                        android:textStyle="bold"
                        android:background="#B13D3D"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_margin="@dimen/txt_small_size"
                        android:id="@+id/cancel"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="الغاء"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/txt_normal_size"
                        android:textStyle="bold"
                        android:background="#CDBEBE"/>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/margin_small_size"
        android:layout_marginRight="@dimen/margin_small_size"
        android:background="@drawable/shape_back_circle"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_clear" />
    </LinearLayout>


</RelativeLayout>