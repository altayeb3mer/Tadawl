<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_normal_size"
    app:cardCornerRadius="@dimen/margin_normal_size"
    android:layoutDirection="rtl">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/g1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/b_lay"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="@dimen/margin_large_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="شقة للايجار"
                    android:textSize="@dimen/txt_large_size"/>
                <TextView
                    android:layout_margin="@dimen/margin_normal_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="شقة للايجارشقة للايجارشقة للايجارشقة للايجارشقة للايجارشقة للايجارشقة للايجارر"
                    android:textSize="@dimen/txt_normal_size"
                    android:maxLines="3"
                    android:ellipsize="end"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/b_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_normal_size">
                <TextView
                    android:paddingLeft="@dimen/margin_small_size"
                    android:paddingRight="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="50 مليار جنية"
                    android:textSize="10sp"
                    android:layout_margin="@dimen/margin_small_size"
                    android:gravity="center"
                    android:background="@drawable/shape_price_bg"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="@dimen/margin_small_size"
                        android:paddingRight="@dimen/margin_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="1.1K"
                        android:textSize="10sp"
                        android:layout_margin="@dimen/margin_small_size"
                        android:gravity="center"
                        android:background="@drawable/shape_views_bg"
                        android:drawableLeft="@drawable/ic_eye"
                        android:drawablePadding="@dimen/margin_small_size"
                        />
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="@dimen/margin_small_size"
                        android:paddingRight="@dimen/margin_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/views_color"
                        android:text="4.5"
                        android:textSize="12sp"
                        android:layout_margin="@dimen/margin_small_size"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_star"
                        android:drawablePadding="@dimen/margin_small_size"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toLeftOf="@+id/g1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_large_size"
                app:cardCornerRadius="@dimen/margin_normal_size">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/shape_toolbar_bg"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>