<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SearchActivity"
    android:layoutDirection="rtl"
    android:id="@+id/container">

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:id="@+id/search_bar"
        android:layout_height="?attr/actionBarSize"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_edt_search_bg"
            android:gravity="center">
            <ImageView
                android:scaleType="centerInside"
                android:id="@+id/back_icon"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back_black"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:id="@+id/edtSearch"
                android:layout_toRightOf="@+id/back_icon"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="اكتب للبحث.."
                android:background="@android:color/transparent"
                android:layout_toEndOf="@+id/back_icon"
                android:layout_toStartOf="@+id/ic_clear"
                android:layout_toLeftOf="@+id/ic_clear" />
            <ImageView
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:id="@+id/ic_clear"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_clear_black"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@+id/search_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="@dimen/margin_normal_size"
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal_size"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/new_adds_rec_item"
            tools:itemCount="5"
            app:spanCount="3"
            />
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/progressLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.wang.avi.AVLoadingIndicatorView
            style="@style/AVLoadingIndicatorView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="visible"
            app:indicatorColor="@color/colorPrimary"
            app:indicatorName="LineSpinFadeLoaderIndicator" />
    </LinearLayout>
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/noItemLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:focusable="true"
        android:focusableInTouchMode="true">
    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عفوا لم يتم العثور على اعلان مشابه للبحث\nحاول باستخدام كلمات اخرى"
        android:textSize="@dimen/txt_normal_size"
        android:lineSpacingExtra="5dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>